<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.casthelloworld.game"
    android:background="#202020">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="215dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <View
                android:id="@+id/piece_1_background"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/player_position"
                android:layout_marginBottom="10dp">

            </View>

            <View
                android:id="@+id/piece_3_background"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/player_position">

            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/piece_2_background"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/player_position"
                android:layout_marginBottom="10dp">

            </View>

            <View
                android:id="@+id/piece_4_background"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/player_position">

            </View>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Game"
            android:id="@+id/exit_btn"
            android:background="@drawable/green_button"
            style="@style/ButtonText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:minWidth="100dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll"
            android:id="@+id/exit_btn"
            android:background="@drawable/green_button"
            style="@style/ButtonText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:minWidth="100dp">

    </LinearLayout>

    <!-- Pieces Labels -->

    <TextView
        android:id="@+id/piece_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="@string/piece_1_name"
        android:layout_toStartOf="@id/piece_1_background"/>

    <TextView
        android:id="@+id/piece_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="@string/piece_2_name"
        android:layout_toStartOf="@id/piece_2_background"/>

    <TextView
        android:id="@+id/piece_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="@string/piece_3_name"
        android:layout_toStartOf="@id/piece_3_background"/>

    <TextView
        android:id="@+id/piece_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="@string/piece_4_name"
        android:layout_toStartOf="@id/piece_4_background"/>

</RelativeLayout>